// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum UserRole {
  STAFF
  MANAGER
}

enum StaffRole {
  STAFF
  MANAGER
  CASUAL
}

enum ImportBatchStatus {
  PROCESSING
  COMPLETED
  FAILED
}

enum ImportType {
  STAFF
  STOCK
}

enum RequestStatus {
  DRAFT
  SUBMITTED
  APPROVED
  REJECTED
  IN_PROGRESS
  READY_FOR_COLLECTION
  COMPLETED
  CANCELLED
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  username  String   @unique
  role      UserRole @default(STAFF)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  importedBatches ImportBatch[]
  uniformRequests UniformRequest[]
}

model Store {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  staffs Staff[]
}

model Staff {
  id          Int       @id @default(autoincrement())
  displayName String
  role        StaffRole
  storeId     Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  store Store @relation(fields: [storeId], references: [id])

  @@index([storeId])
  @@index([role])
}

model StockItem {
  id        Int      @id @default(autoincrement())
  ean       String
  name      String
  qty       Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([ean, name])
  @@index([ean])
}

model ImportBatch {
  id           Int               @id @default(autoincrement())
  importType   ImportType
  fileName     String
  importedById Int?
  totalRows    Int               @default(0)
  validRows    Int               @default(0)
  successRows  Int               @default(0)
  failedRows   Int               @default(0)
  status       ImportBatchStatus @default(PROCESSING)
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt

  importedBy User? @relation(fields: [importedById], references: [id])

  @@index([importedById])
}

model UniformRequest {
  id          Int           @id @default(autoincrement())
  requestNo   String        @unique
  requestedBy Int
  status      RequestStatus @default(DRAFT)
  notes       String?
  neededBy    DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  user  User                 @relation(fields: [requestedBy], references: [id])
  items UniformRequestItem[]

  @@index([requestedBy, status])
}

model UniformRequestItem {
  id              Int    @id @default(autoincrement())
  uniformRequestId Int
  uniformType     String
  size            String
  quantity        Int    @default(1)
  remarks         String?

  uniformRequest UniformRequest @relation(fields: [uniformRequestId], references: [id], onDelete: Cascade)

  @@index([uniformRequestId])
}
