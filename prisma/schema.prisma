// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum UserRole {
  STAFF
  MANAGER
}

enum StaffRole {
  STAFF
  MANAGER
  CASUAL
}

enum RequestStatus {
  PENDING
  REJECTED
  COMPLETED
  CANCELLED
  DISPATCHED
  ARRIVED
  IN_TRANSIT
  REQUEST
  COLLECTED
}

model User {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  email     String   @unique
  username  String   @unique
  role      UserRole @default(STAFF)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Store {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  staffs Staff[]
}

model Staff {
  id              Int              @id @default(autoincrement())
  displayName     String
  role            StaffRole
  storeId         Int
  uniformLimit    Int?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  store           Store            @relation(fields: [storeId], references: [id])
  uniformRequests UniformRequest[]

  @@index([storeId])
  @@index([role])
}

model StockItem {
  ean       String   @id
  name      String
  qty       Int
  createdAt DateTime @default(now())

  @@index([name])
}

model UniformRequest {
  id          Int           @id @default(autoincrement())
  requestNo   String        @unique
  trackingId  String        @unique
  requestedBy Int
  status      RequestStatus @default(PENDING)
  notes       String?
  createdAt   DateTime      @default(now())

  staff Staff                @relation(fields: [requestedBy], references: [id])
  items UniformRequestItem[]

  @@index([requestedBy, status])
}

model UniformRequestItem {
  id              Int    @id @default(autoincrement())
  uniformRequestId Int
  uniformType     String
  size            String
  quantity        Int    @default(1)
  remarks         String?

  uniformRequest UniformRequest @relation(fields: [uniformRequestId], references: [id], onDelete: Cascade)

  @@index([uniformRequestId])
}
