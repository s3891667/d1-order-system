// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
}

enum StaffRole {
  STAFF
  MANAGER
  CASUAL
}

enum RequestStatus {
  PENDING
  COMPLETED
  CANCELLED
  DISPATCHED
  ARRIVED
  IN_TRANSIT
  REQUEST
  COLLECTED
}

model Store {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  staffs     Staff[]
  deliveries Delivery[]
}

model Staff {
  id              Int              @id @default(autoincrement())
  displayName     String
  role            StaffRole
  storeId         Int
  uniformLimit    Int?
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  store           Store            @relation(fields: [storeId], references: [id])
  uniformRequests UniformRequest[]
  deliveries      Delivery[]

  @@index([storeId])
  @@index([role])
}

model StockItem {
  ean       String
  name      String
  qty       Int
  createdAt DateTime @default(now())

  uniformRequests UniformRequest[]

  @@id([ean, name])
  @@index([name])
}

model UniformRequest {
  id              Int           @id @default(autoincrement())
  ean             String
  stockItemName   String
  trackingId      String        @unique
  requestedBy     Int
  quantity        Int           @default(0)
  status          RequestStatus @default(PENDING)
  notes           String?
  createdAt       DateTime      @default(now())

  staff     Staff     @relation(fields: [requestedBy], references: [id])
  stockItem StockItem @relation(fields: [ean, stockItemName], references: [ean, name])
  delivery  Delivery?

  @@index([requestedBy, status])
  @@index([ean])
}

model Delivery {
  id         Int      @id @default(autoincrement())
  trackingId String   @unique
  storeId    Int
  staffId    Int
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  uniformRequest UniformRequest @relation(fields: [trackingId], references: [trackingId])
  store          Store          @relation(fields: [storeId], references: [id])
  staff          Staff          @relation(fields: [staffId], references: [id])

  @@index([storeId])
  @@index([staffId])
}
